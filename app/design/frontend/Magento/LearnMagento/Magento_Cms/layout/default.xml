<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <container name="page_top_after_nav" label="Page Top After Navigation Container" htmlTag="div" htmlClass="hero banner after-navigation" before="main.content"/>
        </referenceContainer>

        <referenceBlock name="footer_links" remove="true" />

        <referenceContainer name="footer">
            <container name="contacts_footer_container" label="Contact Footer Container" htmlTag="div" htmlClass="links" before="cms_footer_links_container"/>
            <container name="services_footer_links_container" label="Services Footer Links" htmlTag="div" htmlClass="links" after="cms_footer_links_container" />
        </referenceContainer>

        <referenceContainer name="contacts_footer_container">
            <block class="Magento\Theme\Block\Html\Header\Logo" name="footer.logo">
                <arguments>
                    <argument name="logo_file" xsi:type="string">images/logo.svg</argument>
                    <argument name="logo_alt" xsi:type="string">Pronko Consulting</argument>
                    <argument name="logo_img_width" xsi:type="number">150</argument>
                    <argument name="logo_img_height" xsi:type="number">50</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Links" name="footer_links_contact">
                <arguments>
                    <argument name="css_class" xsi:type="string">footer links address</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceBlock name="footer_links_contact">
            <block class="Magento\Framework\View\Element\Text\TextList\Item" name="footer.contact.line.0">
                <arguments>
                    <argument name="li_params" xsi:type="array">
                        <item name="class" xsi:type="string">Test1</item>
                    </argument>
                    <argument name="inner_text" xsi:type="string">Test2</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Text\TextList\Item" name="footer.contact.line.1">
                <arguments>
                    <argument name="li_params" xsi:type="array">
                        <item name="class" xsi:type="string">Test3</item>
                    </argument>
                    <argument name="inner_text" xsi:type="string">Test4</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Text\TextList\Item" name="footer.contact.line.2">
                <arguments>
                    <argument name="li_params" xsi:type="array">
                        <item name="class" xsi:type="string">Test5</item>
                    </argument>
                    <argument name="inner_text" xsi:type="string">Test6</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Text\TextList\Item" name="footer.contact.line.3">
                <arguments>
                    <argument name="li_params" xsi:type="array">
                        <item name="class" xsi:type="string">Test7</item>
                    </argument>
                    <argument name="inner_text" xsi:type="string">test@gmail.com</argument>
                </arguments>
            </block>
        </referenceBlock>

        <referenceContainer name="services_footer_links_container">
            <container name="footer_services_title_container" htmlTag="div" htmlClass="footer-title">
                <block class="Magento\Framework\View\Element\Text" name="footer.contact.title">
                    <arguments>
                        <argument name="text" xsi:type="string">Test7</argument>
                    </arguments>
                </block>
            </container>
            <block class="Magento\Framework\View\Element\Html\Links" name="footer_links_services">
                <arguments>
                    <argument name="css_class" xsi:type="string">Test8 links</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceBlock name="footer_links_services">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="magento-2-extensions">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Test9</argument>
                    <argument name="path" xsi:type="string">Test10</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="service-magento-2-development">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Test11</argument>
                    <argument name="path" xsi:type="string">Test12</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="service-magento-2-migration">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Test13</argument>
                    <argument name="path" xsi:type="string">Test14</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="service-magento-2-optimization">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Test15</argument>
                    <argument name="path" xsi:type="string">Test16</argument>
                </arguments>
            </block>
        </referenceBlock>

        <referenceContainer name="cms_footer_links_container">
            <container name="footer_company_info_title_container" htmlTag="div" htmlClass="footer-title">
                <block class="Magento\Framework\View\Element\Text" name="footer_company_info_title">
                    <arguments>
                        <argument name="text" xsi:type="string">Test17</argument>
                    </arguments>
                </block>
            </container>
            <block class="Magento\Framework\View\Element\Html\Links" name="footer_links_cms">
                <arguments>
                    <argument name="css_class" xsi:type="string">Test18</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceBlock name="footer_links_cms">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="about-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Test19</argument>
                    <argument name="path" xsi:type="string">Test20</argument>
                </arguments>
            </block>

            <block class="Magento\Framework\View\Element\Html\Link\Current" name="career-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Test21</argument>
                    <argument name="path" xsi:type="string">Test22</argument>
                </arguments>
            </block>

            <block class="Magento\Framework\View\Element\Html\Link\Current" name="terms-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Test23</argument>
                    <argument name="path" xsi:type="string">Test24</argument>
                </arguments>
            </block>
        </referenceBlock>

        <move element="privacy-policy-link" destination="footer_links_cms" />
    </body>
</page>
